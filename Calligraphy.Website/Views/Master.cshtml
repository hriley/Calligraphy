@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using System.Web.Optimization;
@{
    Layout = null;
    var rootNodes = Umbraco.TypedContentAtRoot().FirstOrDefault().Children;
    var topNavItems = rootNodes.Where(x => !x.GetPropertyValue<bool>("hideFromTopNavigation"));
    var footerNavItems = rootNodes.Where(x => x.GetPropertyValue<bool>("addToFooterNavigation"));
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
  <title>@CurrentPage.pageTitle</title>
  <meta name="description" content="@CurrentPage.HtmlMetaDescription" />
  <meta name="keywords" content="@CurrentPage.HtmlMetaKeywords" />
  <meta http-equiv="content-type" content="text/html; charset=iso-8859-1" />
  <link rel="stylesheet" type="text/css" href="/content/css/site.css" />
  @RenderSection("Css", false)
  @Scripts.Render("~/bundles/JsLibraries")
</head>
<body>
    <div id="" class="site-header">
        <div id="header">
            @*<div id="banner"></div>*@
            <div id="" class="navigation-container">
                <a href="/" class="nav-item" title="Boncrire Home">
                    <img src="~/content/images/Logo1.png" />
                </a>
                @foreach (var child in topNavItems)
                {
                    <a href="@child.Url" class="nav-item">@child.Name</a>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Log out", "MemberLogout", "MemberLoginSurface")
                }
            </div>
            <div style="height: 200px; line-height: 200px; text-align: center;">
                <span style="display: inline-block; vertical-align: middle; line-height: normal; font-size:50px; color:#fff;">Hand crafted mementos of your cherished days...</span>
            </div>
        </div>
    </div>
    <div style=""></div>
    <div id="main">
        <div id="site_content">
            <div id="content">
                <div class="clear"></div>
                <div class="content_item">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div id="footer">
            <div>
                @foreach (var child in footerNavItems)
                { 
                <a href="@child.Url">@child.Name</a>
                }
                <!--<a href="http://validator.w3.org/check?uri=referer">Valid XHTML</a> | <a href="http://jigsaw.w3.org/css-validator/check/referer">Valid CSS</a> | <a href="http://dryicons.com/">Icons</a> | website template by <a href="http://www.araynordesign.co.uk">ARaynorDesign</a>-->
            </div>
        </div>
    </div>
        <div id="container_footer">&nbsp;</div>
        <p style="float: left;padding: 0;">&nbsp;</p>
        <div style="margin: 1em 0 3em 0; text-align: center;">
    </div>
    @RenderSection("Scripts", false)
</body>
</html>
