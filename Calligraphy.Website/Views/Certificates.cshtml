@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
}

<script>
    jQuery(document).ready(function ($) {
        var options = {
            $AutoPlay: true
        };

        var jssor_slider1 = new $JssorSlider$('certificate-image-carousel', options);
    });
</script>

<div>
    <h2>@Model.Content.Name</h2>
    <p>@CurrentPage.certificatesDescription</p>
    @{
        var carouselImages = Model.Content.HasValue("certificatesImages") ? Model.Content.GetPropertyValue<string>("certificatesImages").Split(new string[] { "," }, StringSplitOptions.RemoveEmptyEntries).Select(int.Parse) : null;
        var carouselImageObjects = carouselImages != null ? Umbraco.TypedMedia(carouselImages).Where(x => x != null) : null;
    }

    @if (carouselImageObjects != null)
    {


    <div id="certificate-image-carousel" style="position: relative; top: 0px; left: 0px; width: 400px; height: 200px;">
        <!-- Slides Container -->
        <div u="slides" style="cursor: move; position: absolute; overflow: hidden; left: 0px; top: 0px; width: 400px; height: 200px;">
            @foreach (var caroselImage in carouselImageObjects)
            {
                <div><img u="image" src="@caroselImage.Url" alt="@caroselImage.Name" /></div>
            }
        </div>
    </div>
    
    }
    @if(carouselImageObjects != null){
    <text>
    <div>
        <button>Order</button>
        <ul id="certificate-images">
            @foreach (var caroselImage in carouselImageObjects)
            {
            <li>
                <img src="@caroselImage.Url" alt="@caroselImage.Name" title="@caroselImage.Name" />
            </li>
            }
        </ul>
    </div>
    </text>
    }
    
</div>